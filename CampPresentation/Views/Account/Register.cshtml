@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Регистрация</h2>

<form class="form-horizontal" method="post" action="">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="col-md-3 control-label" for="inp_Login">Логин</label>
        <div class="col-md-6">
            <input class="form-control" id="inp_Login" type="text" name="Name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label" for="inp_FirstName">Email</label>
        <div class="col-md-6">
            <input class="form-control" id="inp_FirstName" type="text" name="Email" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label" for="inp_FirstName">Пароль</label>
        <div class="col-md-6">
            <input class="form-control" id="inp_FirstName" type="text" name="Password" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label" for="inp_FirstName">Подтверждение</label>
        <div class="col-md-6">
            <input class="form-control" id="inp_FirstName" type="text" name="ConfirmPassword" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-6">
            <input class="btn btn-success" type="submit" value="Register" />
        </div>
    </div>
</form> 