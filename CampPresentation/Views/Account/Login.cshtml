@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Логин</h2>
<div class="row">
    <div class="col-md-8">
        <form class="form-horizontal" method="post" action="">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="col-md-3 control-label" for="inp_FirstName">Логин</label>
                <div class="col-md-6">
                    <input class="form-control" id="inp_FirstName" type="text" name="Login"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label" for="inp_FirstName">Пароль</label>
                <div class="col-md-6">
                    <input class="form-control" id="inp_FirstName" type="text" name="Password"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-6">
                    <input class="btn btn-success" type="submit" value="LogIn" />
                </div>
            </div>
        </form>                
    </div>
</div>