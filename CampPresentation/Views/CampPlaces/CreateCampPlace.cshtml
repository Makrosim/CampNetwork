
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="navbar" role="navigation">
    <div class="navbar-header">
        <div class="navbar-brand">Добавить место отдыха</div>
    </div>
</div>

<div class="map" id="map"></div>


<form class="form-horizontal" method="post" action="">
    <div class="form-group">
        <label class="col-md-3 control-label">Название</label>
        <div class="col-md-6">
            <input class="form-control" type="text" name="Name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Долгота</label>
        <div class="col-md-6">
            <input class="form-control" type="text" name="LocationX" id="lng" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Широта</label>
        <div class="col-md-6">
            <input class="form-control" type="text" name="LocationY" id="lat" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Чистота</label>
        <div class="col-md-6">
           <input type="radio" name="Puriry" value="VeryBad"/>
            @Html.RadioButton("Purity", "Bad")
            @Html.RadioButton("Purity", "Medium")
            @Html.RadioButton("Purity", "Good")
            @Html.RadioButton("Purity", "VeryGood")
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Людность</label>
        <div class="col-md-6">
            @Html.RadioButton("Crowdy", "VeryBad")
            @Html.RadioButton("Crowdy", "Bad")
            @Html.RadioButton("Crowdy", "Medium")
            @Html.RadioButton("Crowdy", "Good")
            @Html.RadioButton("Crowdy", "VeryGood")
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Доступность</label>
        <div class="col-md-6">
            @Html.RadioButton("Appriachibility", "VeryBad")
            @Html.RadioButton("Appriachibility", "Bad")
            @Html.RadioButton("Appriachibility", "Medium")
            @Html.RadioButton("Appriachibility", "Good")
            @Html.RadioButton("Appriachibility", "VeryGood")
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Комфортабельность</label>
        <div class="col-md-6">
            @Html.RadioButton("Comfortableness", "VeryBad")
            @Html.RadioButton("Comfortableness", "Bad")
            @Html.RadioButton("Comfortableness", "Medium")
            @Html.RadioButton("Comfortableness", "Good")
            @Html.RadioButton("Comfortableness", "VeryGood")
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Описание</label>
        <div class="col-md-6">
            <textarea class="form-control" name="ShortDescription"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-6">
            <input class="btn btn-success" type="submit" value="Сохранить" />
        </div>
    </div>                                 
</form>


<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDBiYT8YJ36AWUsSXozMhCOWi-ruz0tgPc&callback=initMap"></script>

<script type="text/javascript">

    var map;

    function initMap()
    {
        var myLatlng = { lat: 50, lng: 36.28 };

        map = new google.maps.Map(document.getElementById('map'), {center: myLatlng, zoom: 8});

        var marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            draggable: true,
            title: 'Click to zoom'
        });

        marker.addListener('drag', function ()
        {
            var lng = document.getElementById('lng');
            var lat = document.getElementById('lat');
            lng.value = marker.getPosition().lng();
            lat.value = marker.getPosition().lat();
        });

        marker.addListener('click', function () {
            map.setZoom(8);
            map.setCenter(marker.getPosition());
        });
    }
</script>


