@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="navbar" role="navigation">
    <div class="navbar-header">
        <div class="navbar-brand">Группы</div>
    </div>
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Groups/CreateGroup">Создать</a></li>
    </ul>
    <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Search" name="GroupName">
        </div>
        <button type="submit" class="btn btn-default">Поиск</button>
    </form>    
</div>

<div class="panel-group">
    @{ if (ViewBag.Groups.Count == 0)
        {
            <div class="alert alert-info"> Вы еще не вступили ни в одну группу </div>
        }
        else
        {
            <h3>Созданные вами группы: </h3>
            foreach (var group in ViewBag.Groups)
            {
                if (group.IsCreator)
                {
                    <div class="panel panel-info">
                        <div class="panel-heading"><a href="/Groups/Open/?groupId=@group.Id">@group.Name</a></div>
                        <div class="panel-body">
                            <p>Id группы: @group.Id</p>
                            <p>Описание: @group.ShortDescription</p>
                        </div>
                        <div class="panel-footer"> Кол-во учасников: @(group.MembersCount) </div>
                    </div>
                }
            }

            <h3>Вы состоите в группах: </h3>
            foreach (var group in ViewBag.Groups)
            {
                if (!group.IsCreator)
                {
                    <div class="panel panel-info">
                        <div class="panel-heading"><a href="/Groups/Open/@group.Id">@group.Name</a></div>
                        <div class="panel-body">
                            <p>Название группы: @group.Name</p>                    
                            <p>Описание: @group.ShortDescription</p>
                        </div>
                        <div class="panel-footer"> Кол-во учасников: @(group.MembersCount) </div>
                        <div class="pull-right">Создатель: @group.CreatorFirstName @group.CreatorLastName</div>
                    </div>
                }
            }
        }
    }
</div>
